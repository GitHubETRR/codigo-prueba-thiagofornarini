void ingresarDatos(){
    int salida;
    printf("\nBienvenido al programa, deberá ingresar los datos de los empleados que desee (max 5)\n");
    for(i=0;i<5;i++){
            printf("Empleado %d",i+1);
            printf("\nNombre:\n");
            scanf("%s",info_empleado[i].nombre);
            printf("Edad:\n");
            scanf("%d",info_empleado[i].edad);
            printf("Salario:\n");
            scanf("%d",info_empleado[i].salario);
            printf("\n¿Desea añadir otro empleado? si-(1)  no-(2)\n");
            scanf("%d",&salida);
            if(salida==2){
                break;
            }
            }
        }

