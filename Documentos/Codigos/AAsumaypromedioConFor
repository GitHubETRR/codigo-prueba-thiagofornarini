#include <stdio.h>

int main(){
    int num;
    int n;
    int i;
    int suma=0;
    printf("ingrese la cantidad de numeros que desee sumar:\n");
    scanf("%d",&n);
    for(i=0;i<n;i++){
        printf("Ingrese el numero %d \n", i+1);
        scanf("%d",&num);
        suma= suma+num;
    }
    float promedio=suma/n;
    printf("La suma total es %d \n", suma);
    printf("El promedio es %f",promedio);
}

